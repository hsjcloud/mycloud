        android:text="PINK"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_view_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
